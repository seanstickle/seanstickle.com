<article>
    <header>
        <h1 class="text-4xl font-bold leading-none">
            <a href="{{post.url}}">{{ post.data.title }}</a>
        </h1>
        {% if post.data.subhed %}
            <div class="text-2xl text-gray-500 mt-1">{{ post.data.subhed }}</div>
        {% endif %}
        <div class="text-base text-gray-500 mt-3">
            {{ post.data.date | dateformat }}
        </div>
    </header>

    <section class="mt-6">
        {{ post.templateContent | safe }}
    </section>
</article>